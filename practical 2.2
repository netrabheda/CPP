using namespace std;

int main()
{
    int rows = 4;
    int num = 1;

    for (int n = 1; n <= rows; n++) {

      for (int j = 1; j <= rows - n; j++) {

          cout << " ";
      }


      for (int j = 1; j <= n; j++) {

          cout << num << " ";
          num++;
      }
        cout << endl;
     }

   return 0;
}
