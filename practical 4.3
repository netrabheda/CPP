#include <iostream>
using namespace std;

 double areaOfCircle(float r, double pi = 3.14159) {
    return pi * r * r;
}

int main() {

    float r;

        cout << "Enter the radius of the circle: ";
        cin >> r;

    double area = areaOfCircle(r);
    cout << "The area of the circle is: " << area << endl;

    return 0;
}
